<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_border_back"
        android:fillViewport="true"
        android:padding="20dp"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/white_circle" />

            <TextView
                android:id="@+id/add_device_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="UID:3R5#12"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/add_device_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Please Enter Name"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/white"/>

<!--            <EditText-->
<!--                android:id="@+id/add_device_name"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:hint="Set Name"-->
<!--                android:textColor="@color/white"-->
<!--                android:textColorHint="@color/white"-->
<!--                android:textSelectHandle="@color/white" />-->

            <Spinner
                android:id="@+id/add_device_group_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:visibility="gone" />

            <EditText
                android:id="@+id/master_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rect_btn_bg_darkprimary"
                android:backgroundTint="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:ems="10"
                android:focusable="false"
                android:hint="Select"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size"
                android:visibility="gone" />

            <Button
                android:id="@+id/add_device_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_btn_bg_darkprimary"
                android:backgroundTint="@color/white"
                android:text="Add Device"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
